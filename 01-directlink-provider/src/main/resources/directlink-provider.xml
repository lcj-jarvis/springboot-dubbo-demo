<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!--1、声明服务提供者名称，保证它的唯一性，它是dubbo内部的唯一标识-->
    <dubbo:application name="01-directlink-provider"></dubbo:application>


    <!--2、指定dubbo的协议和端口号
        name：指定协议名称，官方推荐dubbo协议
        port：协议的端口号，默认是20880
    -->
    <dubbo:protocol name="dubbo" port="20880"></dubbo:protocol>

    <!--暴露服务dubbo:service
        interface : 暴露服务的接口的全限定类名
        ref ： 引用接口在spring容器中的表示名称
        registry : 使用直连的方式的话，不使用注册，设置为N/A
    -->
    <dubbo:service interface="com.mrlu.dubbo.service.PersonService"
                   ref="personService" registry="N/A"/>
    <!--加载接口的实现类-->
    <bean id="personService" class="com.mrlu.dubbo.service.impl.PersonServiceImpl"/>

</beans>